@page "/users"
@inject IUserService UserService
@inject NavigationManager Nav

<h2 class="fw-bold mb-4 text-primary">üë• User Management</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <button class="btn btn-success" @onclick="AddUser">
        ‚ûï Add User
    </button>

    <button class="btn btn-outline-info" @onclick="GoToLogs">
        üìú View Logs
    </button>
</div>

@if (users == null)
{
    <div class="text-muted">Loading users...</div>
}
else if (!users.Any())
{
    <div class="alert alert-warning">No users found. Click ‚ÄúAdd User‚Äù to create one.</div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Forename</th>
                        <th>Surname</th>
                        <th>Email</th>
                        <th>Date of Birth</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in users)
                    {
                        <tr>
                            <td>@user.Forename</td>
                            <td>@user.Surname</td>
                            <td>@user.Email</td>
                            <td>@(user.DateOfBirth.HasValue ? user.DateOfBirth.Value.ToString("dd MMM yyyy") : "N/A")</td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => ViewUser(user.Id)">View</button>
                                    <button class="btn btn-sm btn-outline-warning" @onclick="() => EditUser(user.Id)">Edit</button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteUser(user.Id)">Delete</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@code {
    private List<UserManagement.Models.User>? users;

    protected override async Task OnInitializedAsync()
    {
        users = (await UserService.GetAllAsync()).ToList();
    }

    void AddUser() => Nav.NavigateTo("/user/add");
    void EditUser(long id) => Nav.NavigateTo($"/user/edit/{id}");
    void ViewUser(long id) => Nav.NavigateTo($"/user/{id}");
    void GoToLogs() => Nav.NavigateTo("/logs");

    async Task DeleteUser(long id)
    {
        var user = await UserService.GetByIdAsync(id);
        if (user != null)
        {
            await UserService.DeleteAsync(id);
            users?.Remove(user);
        }
    }
}
