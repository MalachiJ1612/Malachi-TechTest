@model UserManagement.Web.Models.Users.UserListViewModel
@{
    ViewData["Title"] = "User Management";
}

<style>
    /* === Global Styles === */
    body {
        background: linear-gradient(135deg, #1f1f1f, #2c2c2c);
        min-height: 100vh;
        color: #e0e0e0;
        font-family: 'Segoe UI', Roboto, Arial, sans-serif;
        margin: 0;
        padding: 40px 0;
    }

    .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 20px;
    }

    /* === Card Style === */
    .card-dark {
        background: #2b2b2b;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        padding: 2rem;
    }

    h2 {
        font-size: 1.8rem;
        font-weight: 600;
        color: #f1f1f1;
        border-bottom: 2px solid #3a3a3a;
        padding-bottom: 0.5rem;
        margin-bottom: 1.5rem;
    }

    /* === Buttons === */
    .btn {
        border: none;
        border-radius: 6px;
        padding: 0.6rem 1rem;
        cursor: pointer;
        font-weight: 500;
        transition: all 0.25s ease;
        font-size: 0.95rem;
    }

    .btn:hover {
        transform: translateY(-2px);
    }

    .btn-add {
        background-color: #4caf50;
        color: white;
    }

    .btn-add:hover {
        background-color: #45a049;
    }

    .btn-logs {
        background-color: #2196f3;
        color: white;
    }

    .btn-logs:hover {
        background-color: #1976d2;
    }

    .btn-filter {
        background-color: #3a3a3a;
        color: #e0e0e0;
        margin-right: 0.5rem;
    }

    .btn-filter.active {
        background-color: #555;
        color: #fff;
    }

    /* === Table === */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1.5rem;
    }

    thead {
        background-color: #383838;
        color: #ccc;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.9rem;
    }

    th, td {
        padding: 0.9rem 1rem;
        border-bottom: 1px solid #444;
    }

    tr:hover {
        background-color: #353535;
        transition: background-color 0.2s ease;
    }

    .badge {
        display: inline-block;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .badge-active {
        background-color: #4caf50;
        color: #fff;
    }

    .badge-inactive {
        background-color: #777;
        color: #eee;
    }

    /* === Actions === */
    .actions {
        display: flex;
        justify-content: flex-end;
        gap: 0.5rem;
    }

    .action-btn {
        background-color: #444;
        color: #e0e0e0;
        padding: 0.4rem 0.8rem;
        border-radius: 5px;
        text-decoration: none;
        font-size: 0.85rem;
    }

    .action-btn:hover {
        background-color: #5a5a5a;
    }

    /* === Responsive === */
    @@media (max-width: 768px) {
        .container {
            padding: 0 10px;
        }

        table, thead, tbody, th, td, tr {
            display: block;
        }

        thead {
            display: none;
        }

        td {
            padding: 1rem;
            border-bottom: 1px solid #444;
            display: flex;
            justify-content: space-between;
        }

        td::before {
            content: attr(data-label);
            font-weight: 600;
            color: #aaa;
        }
    }
</style>

<div class="container">
    <div class="card-dark">
        <h2>👥 User Management</h2>

        <!-- Header Buttons -->
        <div style="display: flex; justify-content: flex-end; gap: 1rem; margin-bottom: 1.5rem;">
            <a asp-controller="Logs" asp-action="Index" class="btn btn-logs">View Logs</a>
            <a asp-action="Add" class="btn btn-add">Add User</a>
        </div>

        <!-- Filters -->
        <div style="margin-bottom: 1rem;">
            <a asp-controller="Users" asp-action="List"
               class="btn btn-filter @(string.IsNullOrEmpty(Model.Filter) ? "active" : "")">
                All
            </a>
            <a asp-controller="Users" asp-action="List" asp-route-filter="active"
               class="btn btn-filter @(Model.Filter == "active" ? "active" : "")">
                Active
            </a>
            <a asp-controller="Users" asp-action="List" asp-route-filter="inactive"
               class="btn btn-filter @(Model.Filter == "inactive" ? "active" : "")">
                Inactive
            </a>
        </div>

        <!-- User Table -->
        <table>
            <thead>
                <tr>
                    <th>Forename</th>
                    <th>Surname</th>
                    <th>Email</th>
                    <th>Date of Birth</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items.Any())
                {
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td data-label="Forename">@item.Forename</td>
                            <td data-label="Surname">@item.Surname</td>
                            <td data-label="Email">@item.Email</td>
                            <td data-label="Date of Birth">@item.DateOfBirth?.ToString("dd MMM yyyy")</td>
                            <td data-label="Status">
                                @if (item.IsActive)
                                {
                                    <span class="badge badge-active">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-inactive">Inactive</span>
                                }
                            </td>
                            <td data-label="Actions">
                                <div class="actions">
                                    <a asp-action="View" asp-route-id="@item.Id" class="action-btn">View</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="action-btn">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="action-btn">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" style="text-align:center; padding:2rem; color:#888;">
                            No users found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
