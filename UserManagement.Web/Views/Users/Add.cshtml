@model UserManagement.Web.Models.Users.UserEditViewModel
@{
    ViewData["Title"] = "Add User";
}

<style>
    body {
        background: linear-gradient(135deg, #1e1e1e 0%, #2b2b2b 100%);
        color: #f1f1f1;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .form-container {
        max-width: 600px;
        margin: 5rem auto;
        padding: 2rem 3rem;
        background: rgba(40, 40, 40, 0.85);
        border-radius: 12px;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 25px rgba(0, 0, 0, 0.4);
    }

    h2 {
        text-align: center;
        color: #00bcd4;
        font-weight: 600;
        margin-bottom: 2rem;
        font-size: 1.8rem;
    }

    label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: #ccc;
    }

    input[type="text"],
    input[type="email"],
    input[type="date"],
    input[type="password"] {
        width: 100%;
        padding: 0.8rem 1rem;
        border: none;
        border-radius: 8px;
        background: #2f2f2f;
        color: #fff;
        margin-bottom: 1rem;
        font-size: 1rem;
        outline: none;
        transition: background 0.3s ease;
    }

    input:focus {
        background: #3a3a3a;
        box-shadow: 0 0 0 2px #00bcd4;
    }

    .form-check {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        margin: 1rem 0;
    }

    .form-check-input {
        width: 1.1rem;
        height: 1.1rem;
        accent-color: #00bcd4;
    }

    .form-check-label {
        color: #ccc;
        font-size: 1rem;
    }

    .btn-primary,
    .btn-secondary {
        display: inline-block;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-right: 0.5rem;
    }

    .btn-primary {
        background: #00bcd4;
        color: #fff;
    }

    .btn-primary:hover {
        background: #26d9ff;
        box-shadow: 0 0 8px #26d9ff;
    }

    .btn-secondary {
        background: #555;
        color: #ddd;
    }

    .btn-secondary:hover {
        background: #666;
        color: #fff;
    }

    .text-danger {
        color: #ff6b6b;
        font-size: 0.9rem;
    }

    @@media (max-width: 600px) {
        .form-container {
            padding: 1.5rem;
            margin: 3rem 1rem;
        }
        h2 {
            font-size: 1.5rem;
        }
    }
</style>

<div class="form-container">
    <h2>âž• Add New User</h2>

    <form asp-action="Add" method="post">
        <div>
            <label asp-for="Forename"></label>
            <input asp-for="Forename" />
            <span asp-validation-for="Forename" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Surname"></label>
            <input asp-for="Surname" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="DateOfBirth"></label>
            <input asp-for="DateOfBirth" type="date" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <div class="form-check">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label"></label>
        </div>

        <div style="margin-top: 2rem; text-align: center;">
            <button type="submit" class="btn-primary">Save</button>
            <a asp-action="List" class="btn-secondary">Cancel</a>
        </div>
    </form>
</div>
