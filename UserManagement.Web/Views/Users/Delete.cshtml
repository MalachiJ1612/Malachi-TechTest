@model UserManagement.Models.User
@{
    ViewData["Title"] = "Delete User";
}

<style>
    body {
        background: linear-gradient(135deg, #1e1e1e 0%, #2b2b2b 100%);
        color: #f1f1f1;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .delete-container {
        max-width: 600px;
        margin: 6rem auto;
        padding: 2.5rem 3rem;
        background: rgba(40, 40, 40, 0.9);
        border-radius: 12px;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 25px rgba(0, 0, 0, 0.5);
        text-align: center;
    }

    h2 {
        color: #ff6b6b;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    p {
        font-size: 1.1rem;
        color: #ccc;
        margin-bottom: 2rem;
    }

    strong {
        color: #fff;
    }

    .btn-danger,
    .btn-secondary {
        display: inline-block;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        margin: 0 0.5rem;
    }

    .btn-danger {
        background: #d32f2f;
        color: #fff;
    }

    .btn-danger:hover {
        background: #ff5252;
        box-shadow: 0 0 10px #ff5252;
    }

    .btn-secondary {
        background: #555;
        color: #ddd;
    }

    .btn-secondary:hover {
        background: #666;
        color: #fff;
    }

    @@media (max-width: 600px) {
        .delete-container {
            margin: 4rem 1rem;
            padding: 2rem;
        }
        h2 {
            font-size: 1.5rem;
        }
        p {
            font-size: 1rem;
        }
    }
</style>

<div class="delete-container">
    <h2>⚠️ Delete User</h2>

    <p>Are you sure you want to delete <strong>@Model.Forename @Model.Surname</strong>?</p>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn-danger">Yes, Delete</button>
        <a asp-action="List" class="btn-secondary">Cancel</a>
    </form>
</div>
