@using UserManagement.Models
@{
    var user = ViewBag.User as User;
    var logs = ViewBag.Logs as List<Log>;
    ViewData["Title"] = "User Details";
}

<style>
    body {
        background: linear-gradient(135deg, #1e1e1e 0%, #2b2b2b 100%);
        color: #f1f1f1;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .user-details-container {
        max-width: 900px;
        margin: 5rem auto;
        padding: 2.5rem 3rem;
        background: rgba(40, 40, 40, 0.9);
        border-radius: 12px;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 25px rgba(0, 0, 0, 0.5);
    }

    h2 {
        color: #00bcd4;
        font-weight: 600;
        margin-bottom: 2rem;
        text-align: center;
    }

    dl {
        display: grid;
        grid-template-columns: 200px 1fr;
        row-gap: 1rem;
        column-gap: 2rem;
    }

    dt {
        color: #bbb;
        font-weight: 600;
    }

    dd {
        color: #fff;
        margin-bottom: 0;
    }

    hr {
        border-color: #444;
        margin: 2rem 0;
    }

    h3 {
        color: #f1f1f1;
        margin-bottom: 1rem;
        border-left: 4px solid #00bcd4;
        padding-left: 10px;
        font-size: 1.4rem;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
    }

    .table th, .table td {
        padding: 0.8rem;
        text-align: left;
        border-bottom: 1px solid #444;
    }

    .table thead {
        background-color: #2e2e2e;
    }

    .table th {
        color: #00bcd4;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    .table tr:hover {
        background-color: rgba(255, 255, 255, 0.05);
        transition: background 0.3s ease;
    }

    .text-muted {
        color: #888;
    }

    .btn-secondary {
        display: inline-block;
        background: #555;
        color: #ddd;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        margin-top: 2rem;
    }

    .btn-secondary:hover {
        background: #666;
        color: #fff;
    }

    @@media (max-width: 700px) {
        .user-details-container {
            margin: 3rem 1rem;
            padding: 2rem;
        }
        dl {
            grid-template-columns: 1fr;
        }
        dt {
            font-weight: bold;
            margin-top: 1rem;
        }
    }
</style>

<div class="user-details-container">
    @if (user == null)
    {
        <h2>User not found</h2>
    }
    else
    {
        <h2>üë§ User Details</h2>

        <dl>
            <dt>Forename</dt>
            <dd>@user.Forename</dd>

            <dt>Surname</dt>
            <dd>@user.Surname</dd>

            <dt>Email</dt>
            <dd>@user.Email</dd>

            <dt>Date of Birth</dt>
            <dd>@user.DateOfBirth?.ToString("yyyy-MM-dd")</dd>

            <dt>Active</dt>
            <dd>
                @if (user.IsActive)
                {
                    <span style="color: #4caf50;">Yes</span>
                }
                else
                {
                    <span style="color: #f44336;">No</span>
                }
            </dd>
        </dl>

        <hr />

        <h3>üìú User Logs</h3>

        @if (logs != null && logs.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Action</th>
                        <th>Description</th>
                        <th>Date/Time (UTC)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in logs.OrderByDescending(l => l.Timestamp))
                    {
                        <tr>
                            <td>@log.Action</td>
                            <td>@log.Description</td>
                            <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No logs found for this user.</p>
        }

        <a asp-action="List" class="btn-secondary">‚Üê Back to List</a>
    }
</div>
